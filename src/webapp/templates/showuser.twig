{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info}} <br />
{{ flash.error}} <br />

{% if user %}
    <table>
        <tr>
            <th>Id</th>
            <th>{{ user.userid }}</th>
            <tr></tr>
            <th>Username:</th>
            <td>{{ user.username }}</th>
            <tr></tr>
            <th>Full Name:</th>
            <td>{{ user.fullname }}</th>
            <tr></tr>
            <th>Address:</th>
            <td>{{ user.address }} </td>
            <tr></tr>
            <th>Postcode:</th>
            <td>{{  user.postcode }}</td>
            <tr></tr>
            <th>Hash:</th>
            <td>********************************(not shown)</td>
            <tr></tr>
            <th>Email:</th>
            <td>{{ user.email }}</td>
            <tr></tr>
            <th>Bio:</th>
            <td>{{ user.bio}}</td>
            <tr></tr>
            <th>Age:</th>
            <td>{{ user.age }}</td>
            <tr></tr>
            <th>Banknumber:</th>
            <td>{{ user.banknumber }}</td>
            <tr></tr>
            <th>Is doctor:</th>
            <td>{{ user.isDoctor }}</td>
            
            {% if user.isPaying %}
            <th>Total spent:</th>
            <td>{{user.cost}}</td>
            {% endif %}
            
            
            
            <tr></tr>
    </table>
{% else %}
    Could not find a user with username "{{ username|raw }}".
{% endif %}

{% endblock %}
