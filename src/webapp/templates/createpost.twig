{% extends 'base.twig' %}

{% block content %}

    <h2>Create post</h2>

    <form action="" method="POST" autocomplete="off">
        <div id="flasherror">{{ flash.error }}</div>

        <label>Title:</label>
        <input type = "text" name="title">
        {% if isPaying %}
        <label>Paying:</label>
        <input type="checkbox" name="cost" value="1"> <br />
        {% endif %}

        <label>Text:</label>
        <textarea cols="40" rows="10" name="content"> </textarea><br />

        <label>Author: <b>{{username}}</b></label>
        <br>
        <input type="hidden" name="token" value="{{token}}">
        <input type="submit" name="submit" value="Create post">
    </form>
{% endblock %}
